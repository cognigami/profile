---
import Base from './Base.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Base title={title}>
  <article class="transformation">
    <header class="transformation-header fade-in">
      <h1 class="transformation-title">{title}</h1>
    </header>
    
    <div class="transformation-content">
      <slot />
    </div>
  </article>
</Base>

<style>
  .transformation {
    padding-top: 80px;
    padding-bottom: 140px;
  }

  .transformation-header {
    margin-bottom: 64px;
  }

  .transformation-title {
    font-family: 'Noto Serif Display', Georgia, Times, serif;
    font-size: 52px;
    font-weight: 500;
    line-height: 1.1;
    letter-spacing: 0.01em;
    color: var(--text-primary);
    margin: 0;
  }

  .transformation-content {
    max-width: 760px;
    margin: 0 auto;
  }

  .transformation-content :global(h2) {
    font-family: 'Noto Serif Display', Georgia, Times, serif;
    font-size: 36px;
    font-weight: 500;
    line-height: 1.2;
    color: var(--accent);
    margin-top: 64px;
    margin-bottom: 24px;
  }

  .transformation-content :global(p) {
    font-family: 'Hind', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-size: 19px;
    line-height: 1.65;
    color: var(--text-primary);
    margin-top: 0;
    margin-bottom: 32px;
  }

  .transformation-content :global(h2:first-child) {
    margin-top: 0;
  }

  @media (max-width: 768px) {
    .transformation {
      padding-top: 60px;
      padding-bottom: 100px;
    }

    .transformation-title {
      font-size: 36px;
    }

    .transformation-content :global(h2) {
      font-size: 28px;
      margin-top: 48px;
    }

    .transformation-content :global(p) {
      font-size: 17px;
    }
  }
</style>
