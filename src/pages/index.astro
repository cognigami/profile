---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Ricardo Olenewa — Strategist, Builder, Researcher">

  <!-- =============================================
       HERO
       ============================================= -->
  <section class="hero">
    <div class="hero__bg" id="hero-bg">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 1600 900"
        preserveAspectRatio="xMidYMid slice"
        style="width:100%;height:100%;display:block;"
        aria-hidden="true"
      >
        <defs>
          <linearGradient id="base-grad" x1="0%" y1="100%" x2="60%" y2="0%">
            <stop offset="0%"   stop-color="#1A1310"/>
            <stop offset="40%"  stop-color="#7A3A22"/>
            <stop offset="75%"  stop-color="#BD6B4A"/>
            <stop offset="100%" stop-color="#2B2826"/>
          </linearGradient>
          <radialGradient id="amber-blob" cx="45%" cy="55%" r="55%" gradientUnits="userSpaceOnUse"
            gradientTransform="translate(720,495) rotate(-18) scale(1,0.55) translate(-720,-495)">
            <stop offset="0%"   stop-color="#D4822B" stop-opacity="0.72"/>
            <stop offset="50%"  stop-color="#C46820" stop-opacity="0.45"/>
            <stop offset="100%" stop-color="#BD6B4A" stop-opacity="0"/>
          </radialGradient>
          <radialGradient id="gold-pool" cx="75%" cy="25%" r="40%" gradientUnits="userSpaceOnUse"
            gradientTransform="translate(1200,225) rotate(12) scale(1.4,0.7) translate(-1200,-225)">
            <stop offset="0%"   stop-color="#E8A84A" stop-opacity="0.55"/>
            <stop offset="60%"  stop-color="#D4822B" stop-opacity="0.25"/>
            <stop offset="100%" stop-color="#D4822B" stop-opacity="0"/>
          </radialGradient>
          <radialGradient id="cream-veil" cx="25%" cy="10%" r="55%" gradientUnits="userSpaceOnUse"
            gradientTransform="translate(400,90) rotate(8) scale(1.6,0.9) translate(-400,-90)">
            <stop offset="0%"   stop-color="#F5F1E8" stop-opacity="0.28"/>
            <stop offset="55%"  stop-color="#E8D9C4" stop-opacity="0.10"/>
            <stop offset="100%" stop-color="#F5F1E8" stop-opacity="0"/>
          </radialGradient>
          <radialGradient id="center-glow" cx="50%" cy="60%" r="30%" gradientUnits="userSpaceOnUse">
            <stop offset="0%"   stop-color="#C4601A" stop-opacity="0.35"/>
            <stop offset="100%" stop-color="#C4601A" stop-opacity="0"/>
          </radialGradient>
          <!--
            Two-layer grain:
            Layer 1 (coarse) — baseFrequency 0.38, 3 octaves — evokes the
              irregular porosity of sun-baked stone or dry pigment on rough paper.
              Blended at 'soft-light' to push darks darker, lift lights warmer.
            Layer 2 (fine) — baseFrequency 0.78, 5 octaves — the fine paper
              grain on top, the glaze layer. Blended at 'overlay', lower opacity.
            Together they read as depth rather than noise.
          -->
          <filter id="grain" x="0%" y="0%" width="100%" height="100%" color-interpolation-filters="sRGB">
            <!-- Coarse layer: stone / dry-pigment porosity -->
            <feTurbulence type="fractalNoise" baseFrequency="0.38" numOctaves="3"
              stitchTiles="stitch" result="coarseNoise"/>
            <feColorMatrix type="saturate" values="0" in="coarseNoise" result="coarseGray"/>
            <feBlend in="SourceGraphic" in2="coarseGray" mode="soft-light" result="afterCoarse"/>

            <!-- Fine layer: glaze / paper grain -->
            <feTurbulence type="fractalNoise" baseFrequency="0.78" numOctaves="5"
              stitchTiles="stitch" result="fineNoise"/>
            <feColorMatrix type="saturate" values="0" in="fineNoise" result="fineGray"/>
            <feComponentTransfer in="fineGray" result="fineDimmed">
              <feFuncA type="linear" slope="0.55"/>
            </feComponentTransfer>
            <feBlend in="afterCoarse" in2="fineDimmed" mode="overlay" result="textured"/>

            <feComposite in="textured" in2="SourceGraphic" operator="in"/>
          </filter>
          <linearGradient id="vignette" x1="0" y1="0" x2="0" y2="1">
            <stop offset="60%" stop-color="transparent"/>
            <stop offset="100%" stop-color="#1A1310" stop-opacity="0.5"/>
          </linearGradient>
        </defs>

        <!-- Base -->
        <rect width="1600" height="900" fill="url(#base-grad)"/>

        <!-- Animatable: deep terracotta stratum -->
        <path id="hero-stratum-deep"
          d="M 1600 900 L 0 900 L 0 680 C 120 650, 280 700, 420 640 C 560 580, 650 620, 800 590 C 950 560, 1100 610, 1250 570 C 1380 535, 1500 580, 1600 555 Z"
          fill="#5A2A15" opacity="0.55"/>

        <!-- Animatable: amber mid-layer -->
        <path id="hero-stratum-amber"
          d="M -50 900 C 80 820, 200 760, 380 730 C 520 705, 640 760, 780 720 C 920 680, 1020 640, 1160 660 C 1320 685, 1450 630, 1650 600 L 1650 900 Z"
          fill="url(#amber-blob)" opacity="0.9"/>

        <!-- Static: gold upper pool -->
        <path
          d="M 550 0 C 660 60, 750 80, 820 150 C 900 230, 950 320, 1050 370 C 1160 425, 1300 390, 1420 440 C 1520 480, 1580 520, 1650 480 L 1650 0 Z"
          fill="url(#gold-pool)" opacity="0.85"/>

        <!-- Static: cream veil -->
        <path
          d="M 0 0 C 100 40, 240 20, 340 80 C 460 150, 500 260, 580 320 C 650 370, 720 350, 760 410 C 800 460, 780 520, 820 560 C 700 540, 580 480, 460 430 C 340 380, 220 340, 120 280 C 50 230, 0 160, 0 100 Z"
          fill="url(#cream-veil)" opacity="0.9"/>

        <!-- Static: center glow -->
        <ellipse cx="680" cy="520" rx="420" ry="260" fill="url(#center-glow)"/>

        <!-- Animatable: strata lines -->
        <path id="hero-strata-line-1"
          d="M 0 480 C 200 460, 400 510, 620 470 C 840 430, 1000 490, 1220 455 C 1400 425, 1540 460, 1600 445"
          stroke="rgba(212,130,43,0.12)" stroke-width="1.5" fill="none"/>
        <path id="hero-strata-line-2"
          d="M 0 530 C 180 510, 380 555, 580 520 C 780 485, 960 540, 1180 505 C 1380 475, 1520 505, 1600 495"
          stroke="rgba(189,107,74,0.09)" stroke-width="1" fill="none"/>

        <!-- Grain + vignette — opacity 0.72 so texture murmurs, not whispers -->
        <rect width="1600" height="900" fill="rgba(43,40,38,0.06)" filter="url(#grain)" opacity="0.72"/>
        <rect width="1600" height="900" fill="url(#vignette)" style="mix-blend-mode:multiply"/>
      </svg>
    </div>
    <div class="hero__content">
      <p class="hero__eyebrow">Strategist · Builder · Researcher</p>
      <h1 class="hero__headline">
        Making the impossible<br/>seem routine.
      </h1>
      <p class="hero__sub">
        From quantum mechanics to machine learning pedagogy —<br/>
        work designed to outlast the moment it was made.
      </p>
    </div>
    <div class="hero__scroll-hint" aria-hidden="true">
      <span></span>
    </div>
  </section>

  <!-- =============================================
       OPENING STATEMENT
       ============================================= -->
  <section class="opening section-spacing">
    <div class="opening__inner two-col fade-up">
      <p class="opening__text">
        I’m a strategist, a builder, and a researcher. I make the previously
        impossible seem routine. Over the past 15 years, I’ve built teams and
        processes that changed how people think about their work. I’ve made leading
        edge technologies accessible to the people who need them. 
      </p>
      <p class="opening__text">
        As a strategist, I work from first principles. When organizations face
        critical capability gaps, most people reach for existing solutions—training
        programs, consultants, incremental improvements. I start by asking: how do
        we know we have a problem; how can we discover the root of the challenge;
        and what would it look like if we actually solved it?
      </p>
      <p class="opening__text">
        Those questions can lead to unusual places. Sometimes the answer is a game
        engine that teaches quantum mechanics. Sometimes it's documentation
        infrastructure that treats docs as code. Sometimes it's a training program
        that reaches millions.
      </p>
      <p class="opening__text">
        The through-line isn't the medium. It's the method: develop a practical sense
        of the domain, focus relentlessly on the people and processes that form the
        solution, and build new capabilities when existing approaches won't work.
        The method is well-adapted to under-specified problems.
      </p>
      <p class="opening__text">
        The result is work that tends to propagate—because when you solve a problem
        at the right level of abstraction, the solution often applies far beyond
        where you built it.
      </p>
    </div>
  </section>

  <!-- =============================================
       TRANSFORMATION SHOWCASES
       ============================================= -->
  <section class="showcases section-spacing">
    <div class="container">

      <!-- Showcase 1: Left-aligned, 70% -->
      <div class="showcase showcase--left fade-up">
        <div class="showcase__inner">
          <span class="showcase__label">01</span>
          <h2 class="showcase__title">
            <a href={`${import.meta.env.BASE_URL}work/quantum-gaming`}>Quantum Gaming</a>
          </h2>
          <p class="showcase__body">
            Quantum computing needs an ecosystem, not just physicists. We created games
            where quantum mechanics are the core mechanics—not educational software with
            points and badges, but actual games that let people build intuition by
            playing. The work runs on actual quantum computers, and continues growing
            through a global community of contributors.
          </p>
          <a href={`${import.meta.env.BASE_URL}work/quantum-gaming`} class="showcase__link">
            Read more <span class="showcase__arrow">→</span>
          </a>
        </div>
      </div>

      <div class="section-divider"></div>

      <!-- Showcase 2: Right-aligned, 70% -->
      <div class="showcase showcase--right fade-up">
        <div class="showcase__inner">
          <span class="showcase__label">02</span>
          <h2 class="showcase__title">
            <a href={`${import.meta.env.BASE_URL}work/ml-education`}>ML Education at Google</a>
          </h2>
          <p class="showcase__body">
            In 2016, less than 1% of Google's engineers could use machine learning in
            production. We needed to become an ML-first company, but declarations are
            worth their weight in air. We used education at scale as a strategic lever
            training that forced infrastructure, tooling, and culture to align
            simultaneously. The result: 40% of Googlers trained, 4 million people
            reached globally per year, and ML became a cultural primitive at
            Google.
          </p>
          <a href={`${import.meta.env.BASE_URL}work/ml-education`} class="showcase__link">
            Read more <span class="showcase__arrow">→</span>
          </a>
        </div>
      </div>

      <div class="section-divider"></div>

      <!-- Showcase 3: Centered, 80% -->
      <div class="showcase showcase--center fade-up">
        <div class="showcase__inner">
          <span class="showcase__label">03</span>
          <h2 class="showcase__title">
            <a href={`${import.meta.env.BASE_URL}work/docs-as-code`}>Documentation as Code</a>
          </h2>
          <p class="showcase__body">
            Google's documentation was labyrinthine and impossible to maintain.
            Wikis don't scale; engineers couldn't find what they needed or trust it was
            current. We put documentation in the code repository—same tools,
            same workflow, zero context switching. The pattern spread
            industry-wide as "docs as code." What started as shutting down a broken wiki
            became how the industry thinks about documentation.
          </p>
          <a href={`${import.meta.env.BASE_URL}work/docs-as-code`} class="showcase__link">
            Read more <span class="showcase__arrow">→</span>
          </a>
        </div>
      </div>

    </div>
  </section>

</Layout>

<style>
  /* ---- HERO ---- */
  .hero {
    position: relative;
    height: 100svh;
    min-height: 600px;
    max-height: 900px;
    overflow: hidden;
    display: flex;
    align-items: flex-end;
    justify-content: flex-start;
  }

  .hero__bg {
    position: absolute;
    inset: 0;
    z-index: 0;
    will-change: transform;
  }

  .hero__svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Dark scrim so text reads clearly */
  .hero__bg::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      rgba(43,40,38,0.82) 0%,
      rgba(43,40,38,0.3) 45%,
      rgba(43,40,38,0.05) 100%
    );
  }

  .hero__content {
    position: relative;
    z-index: 1;
    padding: 0 60px 80px;
    max-width: 820px;
  }

  .hero__eyebrow {
    font-family: var(--font-sans);
    font-size: 0.75rem;
    letter-spacing: 0.14em;
    text-transform: uppercase;
    color: var(--color-accent);
    margin-bottom: 24px;
    opacity: 0;
    animation: fadeUp 700ms ease-out 200ms forwards;
  }

  .hero__headline {
    font-size: clamp(2.6rem, 6vw, 4.4rem);
    line-height: 1.08;
    letter-spacing: -0.02em;
    color: var(--color-text);
    margin-bottom: 28px;
    opacity: 0;
    animation: fadeUp 700ms ease-out 380ms forwards;
  }

  .hero__sub {
    font-size: 1rem;
    color: rgba(245,241,232,0.65);
    line-height: 1.65;
    opacity: 0;
    animation: fadeUp 700ms ease-out 540ms forwards;
  }

  .hero__scroll-hint {
    position: absolute;
    bottom: 36px;
    right: 52px;
    z-index: 1;
    opacity: 0;
    animation: fadeIn 600ms ease-out 1000ms forwards;
  }

  .hero__scroll-hint span {
    display: block;
    width: 1px;
    height: 56px;
    background: linear-gradient(to bottom, transparent, rgba(212,130,43,0.7));
    animation: scrollPulse 2s ease-in-out 1200ms infinite;
  }

  @keyframes fadeUp {
    from { opacity: 0; transform: translateY(18px); }
    to   { opacity: 1; transform: translateY(0); }
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to   { opacity: 1; }
  }

  @keyframes scrollPulse {
    0%, 100% { opacity: 0.3; transform: scaleY(0.7) translateY(-6px); }
    50%       { opacity: 1;   transform: scaleY(1)   translateY(0); }
  }

  /* Parallax scroll for hero bg */
  /* JS handles this via transform, class left here for reference */

  /* ---- OPENING STATEMENT ---- */
  .opening__inner {
    max-width: 1000px;
    margin: 0 auto;
    text-align: center;
  }

  .opening__text {
    font-size: 1.15rem;
    line-height: 1.8;
    color: rgba(245,241,232,0.8);
    margin-bottom: var(--space-para);
  }

  .opening__text:last-child { margin-bottom: 0; }

  /* ---- SHOWCASES ---- */
  .showcases { padding-top: 0; }

  .section-divider {
    margin: 80px auto;
  }

  /* Shared showcase */
  .showcase {
    padding: 0;
    cursor: default;
  }

  .showcase__inner {
    padding: 56px 48px;
  }

  /* Left: 70% width, left-aligned */
  .showcase--left .showcase__inner {
    max-width: 70%;
  }

  /* Right: 70% width, right-aligned */
  .showcase--right .showcase__inner {
    max-width: 70%;
    margin-left: auto;
    text-align: right;
  }

  .showcase--right .showcase__link {
    justify-content: flex-end;
  }

  /* Center: 80% width, centered */
  .showcase--center .showcase__inner {
    max-width: 80%;
    margin: 0 auto;
    text-align: center;
  }

  .showcase--center .showcase__link {
    justify-content: center;
  }

  .showcase__label {
    display: block;
    font-family: var(--font-mono);
    font-size: 0.7rem;
    letter-spacing: 0.1em;
    color: var(--color-accent);
    opacity: 0.7;
    margin-bottom: 16px;
  }

  .showcase__title {
    font-size: clamp(1.6rem, 3vw, 2.1rem);
    margin-bottom: 20px;
    /* Gradient always present underneath — revealed on hover */
    background: linear-gradient(
      105deg,
      #E8A84A 0%,
      #D4822B 38%,
      #C4601A 65%,
      #BD6B4A 100%
    );
    background-clip: text;
    -webkit-background-clip: text;
    /* Solid cream by default; transitioning to transparent reveals gradient */
    color: var(--color-text);
    transition: color 350ms ease-out;
  }

  .showcase:hover .showcase__title {
    color: transparent;
  }

  .showcase__title a {
    color: inherit;
    text-decoration: none;
  }

  .showcase__body {
    font-size: 1rem;
    line-height: 1.75;
    color: rgba(245,241,232,0.7);
    margin-bottom: 28px;
  }

  .showcase__link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-size: 0.82rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--color-accent);
    text-decoration: none;
    transition: gap 300ms ease-out;
  }

  .showcase__arrow {
    display: inline-block;
    transition: transform 300ms ease-out;
  }

  .showcase:hover .showcase__arrow {
    transform: translateX(4px);
  }

  /* ---- RESPONSIVE ---- */
  @media (max-width: 768px) {
    .hero__content { padding: 0 24px 60px; }

    .showcase--left .showcase__inner,
    .showcase--right .showcase__inner,
    .showcase--center .showcase__inner {
      max-width: 100%;
      margin: 0;
      text-align: left;
    }

    .showcase__inner { padding: 40px 24px; }

    .showcase--right .showcase__link,
    .showcase--center .showcase__link {
      justify-content: flex-start;
    }
  }
</style>

<script>
  // ─────────────────────────────────────────────────────────────
  // HERO SCROLL ANIMATION
  // Two effects driven by scroll progress (0→1 over 60% of hero):
  //   1. Parallax:  hero bg translates up at 35% scroll speed
  //   2. Morph:     SVG paths undulate then collapse to horizon
  //
  // Technique: extract all numbers from path strings, lerp them,
  // re-inject. Works because REST and COLLAPSED share identical
  // path command structure. rAF + dirty-flag avoids wasted paints.
  // ─────────────────────────────────────────────────────────────

  const heroBg      = document.getElementById('hero-bg');
  const heroSection = document.querySelector('.hero');

  const stratumDeep  = document.getElementById('hero-stratum-deep');
  const stratumAmber = document.getElementById('hero-stratum-amber');
  const strataLine1  = document.getElementById('hero-strata-line-1');
  const strataLine2  = document.getElementById('hero-strata-line-2');

  // REST state — original path strings verbatim
  const REST = {
    deep: `M 1600 900 L 0 900 L 0 680 C 120 650, 280 700, 420 640 C 560 580, 650 620, 800 590 C 950 560, 1100 610, 1250 570 C 1380 535, 1500 580, 1600 555 Z`,
    amber: `M -50 900 C 80 820, 200 760, 380 730 C 520 705, 640 760, 780 720 C 920 680, 1020 640, 1160 660 C 1320 685, 1450 630, 1650 600 L 1650 900 Z`,
    line1: `M 0 480 C 200 460, 400 510, 620 470 C 840 430, 1000 490, 1220 455 C 1400 425, 1540 460, 1600 445`,
    line2: `M 0 530 C 180 510, 380 555, 580 520 C 780 485, 960 540, 1180 505 C 1380 475, 1520 505, 1600 495`,
  };

  // COLLAPSED state — waves flatten, forms press toward bottom horizon
  const COLLAPSED = {
    deep:  `M 1600 900 L 0 900 L 0 820 C 120 818, 280 822, 420 818 C 560 814, 650 820, 800 816 C 950 812, 1100 818, 1250 814 C 1380 810, 1500 816, 1600 812 Z`,
    amber: `M -50 900 C 80 888, 200 884, 380 882 C 520 880, 640 884, 780 880 C 920 876, 1020 878, 1160 876 C 1320 874, 1450 876, 1650 872 L 1650 900 Z`,
    line1: `M 0 610 C 200 610, 400 610, 620 610 C 840 610, 1000 610, 1220 610 C 1400 610, 1540 610, 1600 610`,
    line2: `M 0 625 C 180 625, 380 625, 580 625 C 780 625, 960 625, 1180 625 C 1380 625, 1520 625, 1600 625`,
  };

  function extractNums(s) {
    return (s.match(/-?\d+(\.\d+)?/g) || []).map(Number);
  }

  function injectNums(template, nums) {
    let i = 0;
    return template.replace(/-?\d+(\.\d+)?/g, () =>
      String(Math.round(nums[i++] * 10) / 10)
    );
  }

  function lerp(a, b, t) { return a + (b - a) * t; }

  function lerpPath(rest, collapsed, t) {
    const rn = extractNums(rest);
    const cn = extractNums(collapsed);
    return injectNums(rest, rn.map((r, i) => lerp(r, cn[i], t)));
  }

  // Ease-in-out cubic — geological movement should feel unhurried
  function ease(t) { return t < 0.5 ? 2*t*t : -1 + (4 - 2*t)*t; }

  let lastProgress = -1;
  let rafPending = false;

  function updateHero() {
    rafPending = false;

    const heroH    = heroSection ? heroSection.offsetHeight : window.innerHeight;
    const scrollY  = window.scrollY;
    const progress = ease(Math.min(scrollY / (heroH * 0.60), 1));

    if (Math.abs(progress - lastProgress) < 0.002) return;
    lastProgress = progress;

    // 1. Parallax
    if (heroBg) heroBg.style.transform = `translateY(${scrollY * 0.35}px)`;

    // 2. Path morph
    if (stratumDeep)  stratumDeep.setAttribute('d',  lerpPath(REST.deep,  COLLAPSED.deep,  progress));
    if (stratumAmber) stratumAmber.setAttribute('d', lerpPath(REST.amber, COLLAPSED.amber, progress));
    if (strataLine1)  strataLine1.setAttribute('d',  lerpPath(REST.line1, COLLAPSED.line1, progress));
    if (strataLine2)  strataLine2.setAttribute('d',  lerpPath(REST.line2, COLLAPSED.line2, progress));

    // 3. Fade strata lines as they collapse — they'd look odd fully opaque when flat
    if (strataLine1) strataLine1.setAttribute('stroke', `rgba(212,130,43,${lerp(0.12, 0, progress).toFixed(3)})`);
    if (strataLine2) strataLine2.setAttribute('stroke', `rgba(189,107,74,${lerp(0.09, 0, progress).toFixed(3)})`);
  }

  window.addEventListener('scroll', () => {
    if (!rafPending) {
      rafPending = true;
      requestAnimationFrame(updateHero);
    }
  }, { passive: true });

  // Initial call to set correct state if page loads mid-scroll
  updateHero();
</script>
